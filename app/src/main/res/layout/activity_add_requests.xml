<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.client.AddRequestsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="start"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="#F7F8FF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="📃 Заказ в автосервисе"
                android:textSize="34dp"
                android:textFontWeight="600"
                android:fontFamily="@font/mulish"
                android:textColor="#202124"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#F7F8FF"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/bBackButtonFromAdd"
                    android:textSize="24dp"
                    android:layout_width="wrap_content"
                    android:text="Выйти"
                    android:fontFamily="@font/mulish"
                    android:backgroundTint="#FAD2CF"
                    android:textColor="#202124"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="⬅️"
                    android:textSize="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Space
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/bButtonAddRequest"
                    android:textSize="24dp"
                    android:fontFamily="@font/mulish"
                    android:layout_width="wrap_content"
                    android:text="Добавить"
                    android:backgroundTint="#34A853"
                    android:textColor="#F7FAFF"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="➕"
                    android:textSize="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#F7F8FF"

            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="40dp"
                android:text="🥸 Все заказы"
                android:fontFamily="@font/mulish"
                android:textFontWeight="600"
                android:textColor="#3D3E43"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lAllRequestsFromClient"
                android:layout_width="match_parent"
                android:background="#F7F8FF"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>