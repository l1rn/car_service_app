<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="400dp"
            android:layout_margin="25dp"
            android:background="@drawable/rounded_background"
            android:layout_height="300dp">
            <LinearLayout
                android:layout_width="400dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="300dp">
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:text="ФИО:"
                        android:textColor="#202124"
                        android:textFontWeight="600"
                        android:textSize="28dp" />
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tClientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:textColor="#3D3E43"
                        android:textSize="25dp"
                        tools:text="Попов Повов попович" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:text="Номер:"
                        android:textColor="#202124"
                        android:textFontWeight="600"
                        android:textSize="28dp" />
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tClientPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:textColor="#3D3E43"
                        android:textSize="25dp"
                        tools:text="8999777555" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:text="Дата:"
                        android:textColor="#202124"
                        android:textFontWeight="600"
                        android:textSize="28dp" />
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tClientDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:textColor="#3D3E43"
                        android:textSize="25dp"
                        tools:text="8999777555" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:text="Статус:"
                        android:textFontWeight="600"
                        android:textSize="28dp"
                        android:textColor="#202124" />
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tClientStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:textColor="#3D3E43"
                        android:textSize="25dp"
                        tools:text="🟢 Открыто" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Причина:"
                        android:textSize="28dp"
                        android:fontFamily="@font/mulish"
                        android:textFontWeight="600"
                        android:textColor="#202124"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tClientReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:textColor="#3D3E43"
                        android:textSize="25dp"
                        tools:text="fdfgseyhrrtsапв  ывпраыеныенукеуккеыапвар ывен" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>